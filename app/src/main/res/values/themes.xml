<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.PocketLauncher" parent="Theme.PocketLauncher.Launcher.Main">
    </style>
    
    <style name="Theme.PocketLauncher.Launcher.Main" parent="Theme.Material3.Dark.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowShowWallpaper">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="dynamicColorThemeOverlay">@style/ThemeOverlay.Material3.DynamicColors.DayNight</item>
        <item name="colorPrimary">@color/cyan</item>
        <item name="colorPrimaryVariant">@color/cyan</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="fontFamily">@font/tw_cen_mt</item>
        <item name="colorSecondary">@color/cyan_accent</item>
        <item name="colorAccent">@color/teal_accent</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="27">shortEdges</item>
    </style>
</resources>